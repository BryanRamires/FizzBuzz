# Server bind address
ADDR=:8090

# Limits
MAX_LIMIT=100000
MAX_STR_LEN=50

# Timeouts (Go duration format: 250ms, 5s, 1m, 2h)
READ_HEADER_TIMEOUT=5s
READ_TIMEOUT=5s
WRITE_TIMEOUT=10s
IDLE_TIMEOUT=60s

# Graceful shutdown timeout
SHUTDOWN_TIMEOUT=10s

# Handler hard timeout (middleware.Timeout)
HTTP_HANDLER_TIMEOUT=30s

# Rate limiting
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_FIZZBUZZ=30
RATE_LIMIT_STATS=10

# Cors
CORS_ENABLED=false
CORS_ALLOWED_ORIGINS=